# Serp Forge Environment Variables
# Copy this file to .env and fill in your values

# Required: Serper API Key
# Get your API key from https://serper.dev
SERPER_API_KEY=your_serper_api_key_here

# Optional: Proxy Configuration
# Comma-separated list of proxies (user:pass@host:port format)
SERP_FORGE_PROXY_LIST=proxy1:port,proxy2:port,proxy3:port

# Optional: Custom User Agents
# Path to file containing custom user agents (one per line)
SERP_FORGE_USER_AGENTS=custom_user_agents.txt

# Optional: Override default configuration
# These will override values in serp_forge_config.yaml

# Serper API settings
SERPER_BASE_URL=https://google.serper.dev
SERPER_TIMEOUT=30
SERPER_MAX_REQUESTS_PER_MINUTE=60

# Scraping settings
SCRAPING_MAX_CONCURRENT=5
SCRAPING_RETRY_ATTEMPTS=3
SCRAPING_REQUEST_TIMEOUT=15
SCRAPING_CONTENT_TIMEOUT=30

# Anti-detection settings
ANTI_DETECTION_ROTATE_HEADERS=true
ANTI_DETECTION_ROTATE_USER_AGENTS=true
ANTI_DETECTION_RANDOM_DELAYS=[1,4]
ANTI_DETECTION_SESSION_ROTATION=true

# Proxy settings
PROXY_ENABLED=true
PROXY_ROTATION_STRATEGY=round_robin
PROXY_HEALTH_CHECK_INTERVAL=300
PROXY_MAX_FAILURES=5

# Content extraction settings
CONTENT_EXTRACTION_AI_POWERED=true
CONTENT_EXTRACTION_CLEAN_HTML=true
CONTENT_EXTRACTION_EXTRACT_METADATA=true
CONTENT_EXTRACTION_SENTIMENT_ANALYSIS=true
CONTENT_EXTRACTION_KEYWORD_EXTRACTION=true
CONTENT_EXTRACTION_LANGUAGE_DETECTION=true
CONTENT_EXTRACTION_AUTO_SUMMARIZATION=true

# Output settings
OUTPUT_FORMAT=json
OUTPUT_INCLUDE_RAW_HTML=false
OUTPUT_SAVE_TO_FILE=false
OUTPUT_OUTPUT_DIRECTORY=./output

# Database settings (optional)
DATABASE_ENABLED=false
DATABASE_URL=sqlite:///serp_forge.db

# Cache settings
CACHE_ENABLED=true
CACHE_REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring settings
MONITORING_ENABLED=true
MONITORING_LOG_LEVEL=INFO
MONITORING_LOG_FORMAT=json
MONITORING_ALERT_WEBHOOK_URL=your_webhook_url_here 